<h1>Log in</h1>

<%= form_tag("/sessions", method: "post") do %>

  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
<% end %>

