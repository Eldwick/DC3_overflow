<div class="user_show container">
  <h1>Log in</h1>

  <%= form_tag("/sessions", method: "post") do %>

    <p class='form-group'>
      <%= text_field_tag :email, nil, placeholder: 'Email', class: "form-control" %>
    </p>
    <p class='form-group'>
      <%= password_field_tag :password, nil,class: "form-control", placeholder: 'Password'  %>
    </p>
    <div class="actions">
      <%= submit_tag "Log in" %>
    </div>
  <% end %>
</div>

